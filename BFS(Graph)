def bfs(graph, visited, node, goal):
    queue = [node]
    
    visited.append(node)
    
    while queue:
        current_node = queue.pop(0)
        
        if current_node == goal:
            return True
        
        for neighbor in graph[current_node]:
            if neighbor not in visited:
                visited.append(neighbor)
                queue.append(neighbor)
    
    return False

graph = {
    0: [1, 2],
    1: [0, 2, 3],
    2: [0, 1],
    3: [1]
}

visited = [] 
start_node = 0
goal_node = 3

result = bfs(graph, visited, start_node, goal_node)
print("Goal found:", result)
